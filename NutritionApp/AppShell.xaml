<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NutritionApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NutritionApp"
    xmlns:views="clr-namespace:NutritionApp.MVVM.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent Route="Login" Title="Login" ContentTemplate="{DataTemplate views:LoginPage}"/>
    <ShellContent Route="AddFoodPage" Title="AddFoodPage" ContentTemplate="{DataTemplate views:AddFoodPage}"/>
    
    <TabBar>
        <Tab>
            <ShellContent Route="MainPage" Title="Dashboard" ContentTemplate="{DataTemplate views:MainPage}"/>
            <ShellContent Route="NutritionDetailPage" Title="Nutrition" ContentTemplate="{DataTemplate views:NutritionDetailPage}"/>
            <ShellContent Route="SettingsPage" Title="Settings" ContentTemplate="{DataTemplate views:SettingsPage}"/>
        </Tab>
    </TabBar>
</Shell>
