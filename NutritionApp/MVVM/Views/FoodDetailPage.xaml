<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:NutritionApp.Converters"
             x:Class="NutritionApp.MVVM.Views.FoodDetailPage"
             xmlns:viewmodel="clr-namespace:NutritionApp.MVVM.ViewModels" 
             x:DataType="viewmodel:FoodDetailViewModel"
             xmlns:model="clr-namespace:NutritionApp.MVVM.Models"
             xmlns:customComponents="clr-namespace:NutritionApp.MVVM.Views"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundColor="{DynamicResource White}"
             Title="FoodDetailPage">

    <VerticalStackLayout Margin="10,5" Spacing="10">
        <Label Text="{Binding FoodItem.Name}" FontSize="Medium" HorizontalOptions="Center"></Label>
        <HorizontalStackLayout>
            <Border>
                <Entry Text="{Binding Amount}"></Entry>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5"></RoundRectangle>
                </Border.StrokeShape>
            </Border>
            <Label Text="Gram" Margin="5,0" VerticalOptions="Center" FontSize="Small"></Label>
        </HorizontalStackLayout>

        <toolkit:Expander IsExpanded="True">
            <toolkit:Expander.Header>
                <Label FontSize="Small" Text="Primary Nutrients"></Label>
            </toolkit:Expander.Header>
            <VerticalStackLayout>
                <customComponents:CustomProgressBar
                    Title="{Binding Calories.CurrentItemValue, StringFormat='Kcal {0}'}"
                    ProgressA="{Binding Calories.NutritionPotentialProgress}"
                    ProgressB="{Binding Calories.NutritionProgress}"
                    ProgressBarAColor="LightGrey"
                    ProgressBarBColor="LimeGreen"/>
                <customComponents:CustomProgressBar Title="{Binding ProteinAmount, StringFormat='Protein {0}g'}" ProgressA="{Binding PotentialProteinProgress}" ProgressB="{Binding ProteinProgress}" ProgressBarAColor="LightGrey" ProgressBarBColor="LimeGreen"/>
                <customComponents:CustomProgressBar Title="{Binding CarbsAmount, StringFormat='Carbs {0}g'}" ProgressA="{Binding PotentialCarbsProgress}" ProgressB="{Binding CarbsProgress}" ProgressBarAColor="LightGrey" ProgressBarBColor="LimeGreen"/>
                <customComponents:CustomProgressBar Title="{Binding FatAmount, StringFormat='Fat {0}g'}" ProgressA="{Binding PotentialFatProgress}" ProgressB="{Binding FatProgress}" ProgressBarAColor="LightGrey" ProgressBarBColor="LimeGreen"/>
            </VerticalStackLayout>
        </toolkit:Expander>

        <toolkit:Expander IsExpanded="True">
            <toolkit:Expander.Header>
                <Label FontSize="Small" Text="Vitamins"></Label>
            </toolkit:Expander.Header>
            <VerticalStackLayout>
                <customComponents:CustomProgressBar Title="{Binding VitaminAAmount, StringFormat='A {0}mg'}"  ProgressB="{Binding VitaminAProgress}" ProgressBarAColor="LightSeaGreen" ProgressBarBColor="LimeGreen"/>
                <!--<customComponents:CustomProgressBar Title="{Binding VitaminDAmount, StringFormat='D {0}mg'}" ProgressA="{Binding }" ProgressB="{Binding }" ProgressBarAColor="LightSeaGreen" ProgressBarBColor="LimeGreen"/>
                <customComponents:CustomProgressBar Title="{Binding VitaminEAmount, StringFormat='E {0}mg'}" ProgressA="{Binding }" ProgressB="{Binding }" ProgressBarAColor="LightSeaGreen" ProgressBarBColor="LimeGreen"/>
                <customComponents:CustomProgressBar Title="{Binding VitaminCAmount, StringFormat='C {0}mg'}" ProgressA="{Binding }" ProgressB="{Binding }" ProgressBarAColor="LightSeaGreen" ProgressBarBColor="LimeGreen"/>
                <customComponents:CustomProgressBar Title="{Binding VitaminKAmount, StringFormat='K {0}mg'}" ProgressA="{Binding }" ProgressB="{Binding }" ProgressBarAColor="LightSeaGreen" ProgressBarBColor="LimeGreen"/>
                <customComponents:CustomProgressBar Title="{Binding VitaminB1Amount, StringFormat='B1 {0}mg'}" ProgressA="{Binding }" ProgressB="{Binding FatProgress}" ProgressBarAColor="LightSeaGreen" ProgressBarBColor="LimeGreen"/>-->
            </VerticalStackLayout>
        </toolkit:Expander>

        <Button Margin="0,5" Command="{Binding AddFoodCommand}" Text="ADD"></Button>

    </VerticalStackLayout>
</ContentPage>