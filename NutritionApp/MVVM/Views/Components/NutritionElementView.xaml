<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionApp.MVVM.Views.NutritionElement">
    <VerticalStackLayout>
        <Label x:Name="nutritionNameLabel"></Label>

        <AbsoluteLayout>
            <ProgressBar x:Name="addedNutritionProgressBar" Progress="0" ProgressColor="DarkSlateBlue" ScaleY="2" BackgroundColor="Transparent" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All"/>
            <ProgressBar x:Name="consumedNutritionProgressBar" Progress="0" ProgressColor="DodgerBlue" ScaleY="2" BackgroundColor="Transparent" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All"/>
        </AbsoluteLayout>
    </VerticalStackLayout>
</ContentView>
