<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionApp.MVVM.Views.NutritionDetailPage"
             xmlns:viewmodel="clr-namespace:NutritionApp.MVVM.Viewmodels"       
             x:DataType="viewmodel:NutritionDetailViewModel"
             xmlns:customComponents="clr-namespace:NutritionApp.MVVM.Views">
    <VerticalStackLayout>
        <customComponents:NutritionElement Text="Kcal" Amount="{Binding Kcal}" AmountNeeded="2400" AmountConsumed="{Binding Kcal}"></customComponents:NutritionElement>
        <customComponents:NutritionElement Text="Protein" Amount="100" AmountNeeded="2400" AmountConsumed="250"></customComponents:NutritionElement>
        <customComponents:NutritionElement Text="Carbs" Amount="100" AmountNeeded="2400" AmountConsumed="250"></customComponents:NutritionElement>
        <customComponents:NutritionElement Text="Fat" Amount="100" AmountNeeded="2400" AmountConsumed="250"></customComponents:NutritionElement>

    </VerticalStackLayout>
</ContentView>