<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionApp.MVVM.Views.CustomProgressBar">
    <VerticalStackLayout>
        <Label x:Name="titleLabel"></Label>

        <AbsoluteLayout>
            <ProgressBar x:Name="progressBarA" Progress="0" ScaleY="1" BackgroundColor="Transparent" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All"/>
            <ProgressBar x:Name="progressBarB" Progress="0" ScaleY="1" BackgroundColor="Transparent" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All"/>
        </AbsoluteLayout>
    </VerticalStackLayout>
</ContentView>
