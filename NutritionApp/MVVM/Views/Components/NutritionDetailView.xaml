<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NutritionApp.MVVM.Views.NutritionDetailPage"
             xmlns:viewmodel="clr-namespace:NutritionApp.MVVM.Viewmodels"       
             x:DataType="viewmodel:NutritionDetailViewModel"
             xmlns:customComponents="clr-namespace:NutritionApp.MVVM.Views">
    <VerticalStackLayout>
        <customComponents:CustomProgressBar Title="Kcal" ProgressA="{Binding ConsumedKcalPercentage}"></customComponents:CustomProgressBar>
        <customComponents:CustomProgressBar Title="Protein" ProgressA="{Binding ConsumedProteinPercentage}"></customComponents:CustomProgressBar>
        <customComponents:CustomProgressBar Title="Carbs" ProgressA="{Binding ConsumedCarbsPercentage}"></customComponents:CustomProgressBar>
        <customComponents:CustomProgressBar Title="Fat" ProgressA="{Binding ConsumedFatPercentage}"></customComponents:CustomProgressBar>
    </VerticalStackLayout>
</ContentView>